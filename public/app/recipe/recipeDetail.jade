.container
    .well
        form.form-horizontal(name="recipeForm")
            fieldset
                legend Recipe Details
                .form-group
                    label.col-md-2.control-label(for="name") Name
                    .col-md-10
                        input.form-control(name="name", type="text", placeholder="Recipe Name", ng-model="recipe.name", required)
                .form-group
                    label.col-md-2.control-label(for="style") Style
                    .col-md-10
                        input.form-control(name="style", type="text", placeholder="Style", ng-model="recipe.style", required)
                .form-group
                    label.col-md-2.control-label(for="name") Name
                    .col-md-10
                        textarea.form-control(rows="10" name="name", placeholder="Description", ng-model="recipe.description", required)
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-left
                            button.btn.btn-danger(ng-click="deleteRecipe()") Delete
                        .pull-right
                            button.btn.btn-primary(ng-click="updateRecipe()", ng-disabled="createRecipeForm.$invalid") Update
                            | &nbsp;
                            a.btn.btn-default(href="/recipe") Cancel

